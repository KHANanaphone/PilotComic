<form method='post'>

	<label for='username'>Username</label> <br />
	<input type='text' name='username' 
		<% if(req.body) { %>
		value='<%= req.body.username %>'
		<% } %>
	/>
	
	<br /><br />

	<label for='password'>Password</label> <br />
	<input type='password' name='password'/>

	<br /><br />

	<button type='submit'>Login</button>

</form>